{
	"compilerOptions": {
		"target": "es5",
		"lib": ["es2017"],
		"module": "commonjs",
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"outDir": "dist"
	},
	"exclude": ["node_modules", "dist"],
	"include": ["./src/**/*"],
}
